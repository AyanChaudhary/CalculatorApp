<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="35+98"
        android:textSize="35sp"
        android:gravity="right"
        android:textColor="@color/white"
        android:layout_marginEnd="20dp"
        android:id="@+id/tv_expression"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="245"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:gravity="right"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:id="@+id/tv_result"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="170dp"
                android:layout_height="75dp"
                android:onClick="AllClear"
                android:text="All Clear"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background_orange_allclear"/>

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="BackPress"
                android:text="âŒ«"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background_orange"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="OperatorOperate"
                android:text="/"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background_orange"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="7"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="8"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="9"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="OperatorOperate"
                android:text="*"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background_orange"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="4"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="5"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="6"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="OperatorOperate"
                android:text="-"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background_orange"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="1"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="2"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="3"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="OperatorOperate"
                android:text="+"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background_orange"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="00"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="0"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="numberOperate"
                android:text="."
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:onClick="equalOperate"
                android:text="="
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background_orange"/>



        </LinearLayout>
    </LinearLayout>




</LinearLayout>